<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %>
            
        </h1>
    </div>

    <div class="box">
        <ul>
            <% if (Items.length > 0) {for (let i = 0; i < Items.length; i++ ) {%>
            <form action="/delete/<%= listTitle  %>" method="post">
                <div class="item">
                    <input type="checkbox" onchange="this.form.submit()" name="check" id="check" value="<%= Items[i] %>">
                    <p id="item_name"><%= Items[i] %></p>
                </div>
            </form>
            <% }} else { %>

                <form>
                    <div class="item">
                        <input type="checkbox" name="check" id="check" value="">
                        <p id="item_name">Welcome to your todolist!</p>
                    </div>
                </form>
                
                <form>
                    <div class="item">
                        <input type="checkbox" name="check" id="check" value="">
                        <p id="item_name">Hit the + button to add new item</p>
                    </div>
                </form>

                <form>
                    <div class="item">
                        <input type="checkbox" name="check" id="check" value="">
                        <p id="item_name"> &lt-- Hit this to delete an item </p>
                    </div>
                </form>
            <% } %>
        </ul>

        <form action="/<%= listTitle  %>" method="post">
            <div class="input-group">
                <input type="text" name="item" id="" autocomplete="off" required>
                <button type="submit" name="list" class="add" value="<%= listTitle %>">+</button>
            </div>
        </form>
    </div>

    <%- include("footer") -%>